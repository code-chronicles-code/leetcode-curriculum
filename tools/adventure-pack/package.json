{
  "name": "@code-chronicles/adventure-pack",
  "version": "0.0.1",
  "license": "MIT",
  "private": false,
  "contributors": [
    {
      "name": "Miorel-Lucian Palii",
      "url": "https://github.com/miorel"
    },
    {
      "name": "Eli Manzo",
      "url": "https://github.com/elimanzo"
    },
    {
      "name": "Michael Volk",
      "url": "https://github.com/volkmchl"
    }
  ],
  "scripts": {
    "goodies:java:format": "prettier --write goodies/java && (cd goodies/java && ./gradlew ktfmtCustom)",
    "goodies:java:install": "javac -version",
    "goodies:java:test": "(cd goodies/java && ./gradlew test)",
    "goodies:kotlin:format": "(cd goodies/kotlin && ./gradlew ktfmtCustom)",
    "goodies:kotlin:install": "javac -version",
    "goodies:kotlin:test": "(cd goodies/kotlin && ./gradlew test)",
    "goodies:python:format": "bash -c 'cd goodies/python && source .venv/bin/activate && black --line-length=80 .'",
    "goodies:python:install": "bash -c 'cd goodies/python && python -m venv .venv && source .venv/bin/activate && pip install -r requirements.txt'",
    "goodies:python:test": "bash -c 'cd goodies/python && source .venv/bin/activate && pytest --color=yes'",
    "goodies:typescript:format": "prettier --write goodies/typescript",
    "goodies:typescript:install": "yarn",
    "goodies:typescript:test": "jest --color",
    "build-app": "ts-node src/scripts/package-goodies/main.ts && tsx src/scripts/build-html.tsx && NODE_ENV=development webpack && cp css/style.css dist/style.css",
    "format": "yarn goodies:java:format && yarn goodies:kotlin:format && yarn goodies:python:format && yarn goodies:typescript:format && prettier --write .",
    "lint": "eslint --max-warnings=0 .",
    "postinstall": "yarn goodies:java:install && yarn goodies:kotlin:install && yarn goodies:python:install",
    "test": "yarn goodies:java:test && yarn goodies:kotlin:test && yarn goodies:python:test && yarn goodies:typescript:test",
    "typecheck": "tsc --project ."
  },
  "dependencies": {
    "immutability-helper": "3.1.1",
    "invariant": "2.2.4",
    "nullthrows": "1.1.1",
    "prettier": "3.3.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-syntax-highlighter": "15.5.0"
  },
  "devDependencies": {
    "@code-chronicles/eslint-config": "0.0.1",
    "@code-chronicles/util": "0.0.1",
    "@jest/globals": "29.7.0",
    "@types/node": "20.14.10",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/react-syntax-highlighter": "15.5.13",
    "eslint": "9.6.0",
    "invariant": "2.2.4",
    "jest": "29.7.0",
    "prettier-plugin-java": "2.6.0",
    "ts-jest": "29.1.5",
    "ts-loader": "9.5.1",
    "ts-morph": "23.0.0",
    "ts-node": "10.9.2",
    "tsx": "4.16.2",
    "type-fest": "4.21.0",
    "typescript": "5.5.3",
    "webpack": "5.92.1",
    "webpack-cli": "5.1.4",
    "zod": "3.23.8"
  }
}
